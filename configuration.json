{ "workbench.colorTheme": "Gruvbox Dark Medium",
  "workbench.colortheme": "northernlights",
  "ocaml.sandbox": { "kind": "global" },
  "git.ignorelimitwarning": true,
  "editor.detectindentation": true,
  "editor.fontfamily": "jetbrainsmono-regular.ttf",
  "editor.fontsize": 25,
  "editor.largefileoptimizations": true,
  "editor.highlightactiveindentguide": true,
  "editor.indentsize": 4,
  "edisor.insertspaces": true,
  "editor.linenumbers": "on",
  "editor.matchbrackets": true,
  "editor.minimap.enabled": true,
  "editor.minimap.maxcolumn": 60,
  "editor.minimap.showslider": true,
  "editor.renderindentguides": true,
  "editor.renderwhitespace": "none",
  "editor.zenmode.hidetabs": false,
  "editor.zenmode.singlefile": true,
  "files.exclude": [ "_esy", "node_modules" ],
  "workbench.activitybar.visible": true,
  "workbench.editor.showtabs": true,
  "workbench.icontheme": "vs-seti",
  "workbench.sidebar.location": "top",
  "workbench.sidebar.visible": false,
  "workbench.statusbar.visible": true,
  "workbench.tree.indent": 2,
  "terminal.integrated.shell.linux": "fish",
  "vim.usesystemclipboard": [ "yank" ],
  "experimental.viml": [
    "nnoremap ; :",
    "imap <s-x>  <esc>ci}", 
    "nmap <s-x>  <esc>ci>",
    "imap <s-z>  <esc>ci>"
    ,"nmap <TAB>  0"
    , "nmap m  $"
  ],
  "language.rason.languageServer.command": "/bin/reason-language-server.exe",
  "language.reason.languageServer.arguments": [],
  "language.reason.languageServer.configuration": {}
}
